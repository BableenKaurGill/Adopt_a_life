<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8ddedada"
    android:padding="20dp"

    tools:context="com.example.jaggi.project1.Editprofileuser">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/edit_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#44bfd7"
                android:gravity="center_horizontal"
                android:text="EDIT PROFILE"
                android:textColor="#fff"
                android:textSize="30dp"
                android:typeface="serif"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textColor="#ece8e8"
                android:textSize="20dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#666161"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:textColor="#ece8e8"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#ece8e8"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#666161"
                android:enabled="false"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textColor="#ece8e8"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#ece8e8"
                android:textSize="20dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#666161"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColor="#ece8e8"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Details"
                android:textColor="#ece8e8"
                android:textSize="20dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/contact_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#666161"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="#ece8e8"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#ece8e8"
                android:textSize="20dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/address_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#666161"
                android:imeOptions="actionDone"
                android:maxLength="10"
                android:textColor="#ece8e8"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="#44bfd7"
                android:onClick="update_btn"
                android:text="UPDATE"
                android:textColor="#fff"
                android:textSize="20dp" />


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
