<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resetusingcontact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#95999b"
    tools:context="com.example.jaggi.project1.Resetusingcontact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:hint="Enter Contact Number"
            android:gravity="center"
            android:textColorHint="#fff"
            android:textSize="25dp"
            android:textColor="#fff"
            android:id="@+id/contact_et"
            android:background="@null"
            android:maxLength="10"
            android:inputType="phone"
            android:imeOptions="actionDone"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"

            />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="NEXT"
            android:textSize="20dp"
            android:textColor="#fff"
            android:backgroundTint="#44bfd7"
            android:onClick="next_btn"
            android:id="@+id/next_btn"/>
    </LinearLayout>


</RelativeLayout>
