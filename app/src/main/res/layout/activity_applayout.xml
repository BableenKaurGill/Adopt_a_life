<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_applayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/img6"
    tools:context="com.example.jaggi.project1.Applayout">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adopt A Life"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="#44bfd7"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:typeface="serif"
        android:id="@+id/tv"
        />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:id="@+id/crawl_anim"
        android:src="@drawable/crawl_child"

        />

</RelativeLayout>
